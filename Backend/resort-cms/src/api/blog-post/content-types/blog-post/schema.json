{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Slug": {
      "type": "uid"
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "ADVENTURE",
        "WILDLIFE",
        "ACCOMMODATION",
        "TRAVEL_TIPS"
      ]
    },
    "Excerpt": {
      "type": "string"
    },
    "Content": {
      "type": "richtext"
    },
    "Author": {
      "type": "string"
    },
    "Published_Date": {
      "type": "date"
    },
    "Read_Time": {
      "type": "biginteger"
    },
    "Featured_Image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    }
  }
}
